<?php
require("./dbcon/connection.php");

function updateNews($site, $url, $image, $title, $resume, $time) {
	$con = getConnection();

	$query = "INSERT INTO News (site, url, image, title, resume, time) VALUES ('".$site."', '".$url."', '".$image."', '".$title."', '".$resume."', '".$time."')";

	echo "<br>".$query."<br><b>";

	mysqli_query($con, $query);
	if (mysqli_errno($con) != 0) {
		echo "ERROR: ".mysqli_error($con);
	} else echo "Noticia actualizada satisfactoriamente.";

	echo "</b><br><br>";

	closeConnection($con);
}
?>
